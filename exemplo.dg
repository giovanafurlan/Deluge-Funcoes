recordDetails = zoho.crm.getRecordById("Deals", dealID);
subformEntries = recordDetails.get("Quote_Line_Items");
subformSize = recordDetails.get("Quote_Line_Items").size();
lastRow = subformSize - 1; 
statusList = list();
for each entry in subformEntries
{
	listStatus = entry.get("Stage");
	statusList.add(listStatus);
		
}
lastRowStatus = statusList.get(lastRow);
mp = map();
mp.put("Stage", lastRowStatus);
updateMainRecord = zoho.crm.updateRecord("Deals", dealID, mp);
info updateMainRecord;